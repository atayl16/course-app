%center
  .jumbotron.shadow.parallax
    %div{:style => "padding:20px; text-align:center; border: 10px solid #563d7c; background: #ffffff"}

      %br
      %br
      %span{:style => "font-size:50px; font-weight:bold"} Certificate of Completion
      %br
      %p
      %h3
        This is to certify that
      -  if @enrollment.user.display_name?
        %h2
          %u
            = @enrollment.user.display_name
      -  else
        %h2
          %u
            = @enrollment.user.email
      %h3
        has successfully completed the course
      %h2
        %u
          = @enrollment.course.title
      %h3
        on the Islam4kids Academy platform

        %br
        %br
        %center
        %h3
        = image_tag wicked_pdf_asset_base64('logo_color.png'), height: "140", width: "auto"
        %p
        %a{:href => "https://www.islam4kids.academy/"}> www.islam4kids.academy
        %br
        %a{:href => "https://www.islam4kids.org/"}> www.islam4kids.org
      %br
      %p
      %b Registration date:
      #{@enrollment.created_at.strftime('%d-%b-%Y')}

      %p
      %b Certificate ID:
      #{@enrollment.slug}

      %p
      %b Certificate URL:
      #{request.base_url}#{request.original_fullpath}
