- content_for :title do
  Islam4Kids
  \|
  Online Courses - Learn Anything, On Your Schedule

:css
  .jumbotron{
      background-image: url('https://cdn.pixabay.com/photo/2019/06/18/15/14/mandala-4282571_960_720.jpg');
      background-size: cover;
      height: auto;}

.jumbotron.shadow.parallax.text-shadow
  %h1
    %b Islam4Kids Academy
  .p-2

  - if current_user
    .p-2
    %h3.text-shadow What will you learn today?
    .p-2
    = search_form_for @ransack_courses, as: :courses_search, url: courses_path do |f|
      .input-group
        = f.search_field :title_cont, class: 'form-control-lg', style: 'float: left; width: 200px; ', placeholder: 'Find a course', :autocomplete => :off
        %span.input-group-append
          %button.btn.btn-primary.btn-lg{:type => "submit"}
            %span.fa.fa-search{"aria-hidden" => "true"}
    .p-2
  - else
    %h3.text-shadow Join for free or login to save your progress and earn a certificate of completion
    .p-2
    = link_to 'Register', new_user_registration_path, class: 'btn btn-custom-purple btn-lg'
    = link_to 'Login', new_user_session_path, class: 'btn btn-custom-purple btn-lg'
    .row.mt-1
    .p-2
    .form-inline.my-2.my-lg-0
      = form_tag(courses_path, method: :get) do
        .input-group
          = text_field_tag :title, params[:title], autocomplete: 'off', placeholder: "Find a course", class: 'form-control-sm'
          %span.input-group-append
            %button.btn.btn-primary.btn-sm{:type => "submit"}
              %span.fa.fa-search{"aria-hidden" => "true"}

.card-group.shadow
  .card
    .card-body
      %h1
        .fa.fa-graduation-cap
      = pluralize(Course.approved.published.count, 'online courses')
      /= Course.count
      /online courses
      .row
      %small Explore a variety of recent topics
  .card
    .card-body
      %h1
        .fa.fa-chalkboard-teacher
        /.fa.fa-brain
      = pluralize(Course.distinct.count(:user_id), 'expert instructors')
      /= Course.distinct.count(:user_id)
      /expert instructors
      .row
      %small Find the right instructor for you
  .card
    .card-body
      %h1
        .fa.fa-user-graduate
      = pluralize(User.count, 'active learners')
      /= User.count
      /active learners
      .row
      %small Join the knowledge sharing community
  .card
    .card-body
      %h1
        .fa.fa-infinity
      Lifetime access
      .row
      %small Learn on your schedule

%p

%h2
  %b
  .fa.fa-tags
  Top Categories
- @popular_tags.each do |tag|
  = link_to courses_path(courses_search: {course_tags_tag_id_eq: tag.id}) do
    .mt-1.btn.btn-info
      = tag.name
      %span.badge.badge-light
        = tag.course_tags_count
%hr

- if current_user
  - if current_user.enrollments.any?
    %h2
      %b
      .fa.fa-user-graduate
      = link_to 'Continue learning ', learning_courses_path
    .row
      - @learning_courses.each do |course|
        .col-md-6
          = render 'courses/course', course: course
          %p
    %hr
  - if current_user.courses.any?
    %h2
      .fa.fa-chalkboard-teacher
      = link_to 'You are teaching', teaching_courses_path
    .row
      - @teaching_courses.each do |course|
        .col-md-6
          = render 'courses/course', course: course
          %p
    %hr

%h2
  .fa.fa-chart-line
  = link_to 'Popular courses', courses_path(courses_search: {s: 'enrollments_count desc'})
.row
  - @popular.each do |course|
    .col-md-6
      = render 'courses/course', course: course
      %p
%hr
%h2
  .fa.fa-star
  = link_to 'Top rated courses', courses_path(courses_search: {s: 'average_rating desc'})
.row
  - @top_rated.each do |course|
    .col-md-6
      = render 'courses/course', course: course
      %p
%hr
%h2
  .fa.fa-clock
  = link_to 'Latest courses', courses_path(courses_search: {s: 'created_at desc'})
.row
  - @latest.each do |course|
    .col-md-6
      = render 'courses/course', course: course
      %p
%hr

%h2
  .fa.fa-comment
  What our students have to say
.row
  - @latest_good_reviews.each do |enrollment|
    .col-md-6
      = render 'enrollments/enrollment', enrollment: enrollment
      %p
%br
.card-group.shadow
  .card
    .card-body
      %b
        .fa.fa-clock
        Go at your own pace
      %small
        Enjoy unlimited access to courses as long as you are active
  .card
    .card-body
      %b
        .far.fa-check-circle
        Learn from anywhere
      %small
        Select from top instructors around the world
  .card
    .card-body
      %b
        .far.fa-play-circle
        Find courses on that meet your needs
      %small
        Choose the course that is right for your current level
